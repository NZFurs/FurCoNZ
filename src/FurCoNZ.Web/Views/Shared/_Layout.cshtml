<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] != "" ? ViewData["Title"] + " - " : "") FurCoNZ 2020</title>
    <link rel="stylesheet" href="~/css/bundle.css" />

    <!-- flatpickr - a lightweight and powerful datetime picker -->
    <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/lib/flatpickr/themes/dark.css" />

    <!-- fancybox - JavaScript lightbox library for presenting various types of media. -->
    <link rel="stylesheet" href="~/lib/fancybox/jquery.fancybox.css" />

<!-- Font Awesome 5 Free -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/solid.css" />

    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    <link rel="manifest" href="/assets/site.webmanifest">
    <link rel="mask-icon" href="/assets/safari-pinned-tab.svg" color="#daa420">
    <meta name="msapplication-TileColor" content="#ffc40d">
    <meta name="theme-color" content="#daa420">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-primary box-shadow mb-3 navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    FurCoNZ
                    <img class="d-none d-lg-block navbar-brand-image" src="/assets/2020FlavourSmalldrop.png" alt="" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-active-controllers="Home" asp-active-actions="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="News" asp-active-controllers="Home" asp-active-actions="News">News</a>
                        </li>
                        <li class="nav-item dropdown">
                            <!-- <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About" asp-active-controllers="Home" asp-active-actions="About">About</a> -->
                            <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">Info</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="About" asp-active-controllers="Home" asp-active-actions="About">About FurCoNZ</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="FAQ" asp-active-controllers="Home" asp-active-actions="FAQ">FurCoNZ 2020 FAQ</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Tickets" asp-active-controllers="Home" asp-active-actions="Tickets">Ticket Information</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AboutVenue" asp-active-controllers="Home" asp-active-actions="AboutVenue">About Our Venue</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Terms" asp-active-controllers="Home" asp-active-actions="Terms">Attendee Terms & Conditions</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#" asp-active-controllers="Contact" aria-haspopup="true" aria-expanded="false">Get Involved</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="ActivityOrTalk">Activity or Talk</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="DealersDen">Dealers' Den</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="Volunteer">Volunteer</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a>
                            </div>
                        </li>
                        <li class="nav-item" asp-authorize asp-policy="AdminOnly">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Home" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" href="#" asp-active-controllers="Account" aria-haspopup="true" aria-expanded="false">Account</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Index">My Account</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Orders">My Orders</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Tickets">My Tickets</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index" asp-active-controllers="Order">
                                    Order
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index" asp-active-controllers="Account" data-toggle="tooltip" data-placement="bottom" title="With NZFurs Account">
                                    Login <span class="d-sm-none">- With NZFurs Account</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index" asp-active-controllers="Order" data-toggle="tooltip" data-placement="bottom" title="You'll first be redirected to NZFurs to login">
                                    Order <span class="d-sm-none">- Requires NZFurs Login</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://furconz.printmighty.co.nz/" target="_blank">
                                <h5 class="m-0 d-inline">Merch</h5>
                            </a>
                        </li>
                    </ul>
                </div>
            </div> 
        </nav>
    </header>
    <div class="container main-container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            <div class="page-header">
                <div class="col-lg-8 offset-lg-2">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container footer-container text-center">
            © 2019 FurCoNZ
            - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            - <a asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
            - <a asp-area="" asp-controller="Home" asp-action="Terms">Terms & Conditions</a>
            - <a asp-area="" asp-controller="Home" asp-action="ParentalConsent">Parental Consent Form</a>
            - <a asp-area="" asp-controller="Home" asp-action="GetNotified">Get Notified</a>
            - <a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validate/additional-methods.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/popper/esm/popper.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/flatpickr/flatpickr.js"></script>
        <script src="~/lib/fancybox/jquery.fancybox.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"
                integrity="sha384-6UVI3atWyL/qZbDIJb7HW8PyHhFNMiX5rYNY2gAYcaYJjYk5cNIQShSQPBleGMYu"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"
                integrity="sha384-R3vNCHsZ+A2Lo3d5A6XNP7fdQkeswQWTIPfiYwSpEP3YV079R+93YzTeZRah7f/F"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/jquery-validate/additional-methods.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.min.js"
                integrity="sha384-+9oZBwhpg6hNnpXhuEkmAUXP1YGXnRZEH7KB6j6u73Ugx0YNlB/EdaNAs5mihho5"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/popper/esm/popper.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/esm/popper.min.js"
                crossorigin="anonymous"
                integrity="sha384-tp7bo4bbDwNIDQzFcoRkq4TLqNITn185tQck7iGbV71cllpzrFqp2DckWujqh0UG">
        </script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o">
        </script>
        <script src="~/lib/flatpickr/flatpickr.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.3/flatpickr.min.js"
                crossorigin="anonymous"
                integrity="sha384-UiZzAA+k9B6Xr4SykueV26lljeUk/hTx/fFNONRwB3Dt3dLDOXg8lQlbf/j8rB7B">
        </script>
        <script src="~/lib/fancybox/jquery.fancybox.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"
                crossorigin="anonymous"
                integrity="sha384-Zm+UU4tdcfAm29vg+MTbfu//q5B/lInMbMCr4T8c9rQFyOv6PlfQYpB5wItcXWe7">
        </script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
